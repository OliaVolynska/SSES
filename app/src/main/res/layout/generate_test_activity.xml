<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0a0b0a"
    android:weightSum="1">

    <EditText
        android:layout_width="296dp"
        android:layout_height="40dp"
        android:id="@+id/editTextTitleTest"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edit"
        android:hint="@string/test"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:textColor="#014a03" />

    <EditText
        android:layout_width="296dp"
        android:layout_height="40dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextMaximalMark"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edit"
        android:layout_marginTop="10dp"
        android:hint="@string/maximal_mark"
        android:paddingLeft="10dp"
        android:textColor="#014a03" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <ListView
            android:id="@+id/listThemes"
            android:layout_width="191dp"
            android:layout_height="176dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/for_list"
            android:layout_marginTop="20dp"
            android:layout_weight="0.08">
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="Add new \ntheme"
            android:id="@+id/buttonAddThemeInTest"
            android:background="@drawable/button_circle" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="Generate \nnew test"
            android:id="@+id/buttonAddTest"
            android:layout_gravity="center_horizontal"
            android:contextClickable="false"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_circle"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

</LinearLayout>